{
  "rules": {
    "bookings": {
      ".read": true,
      ".write": "auth != null",
      ".indexOn": ["userId"]
    },
    "users": {
      "$uid": {
        ".read": "$uid === auth.uid",
        ".write": "$uid === auth.uid"
      }
    },
    "chats": {
      "$userId": {
        ".read": "auth != null && (auth.uid === $userId || root.child('admins').child(auth.uid).exists())",
        ".write": "auth != null && (auth.uid === $userId || root.child('admins').child(auth.uid).exists())",
        "messages": {
          ".indexOn": ["timestamp"]
        }
      }
    },
    "admins": {
      ".read": "auth != null",
      ".write": false
    }
  }
}
